<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>@ViewBag.Title - ASP.NET Blog</title>
    <meta charset="utf-8" />
    <meta name="author" content="Michel Banagouro" />
    <meta name="description" content="Blog desenvolvido no curso de ASP.NET MVC" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" />
    <link href="~/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen" />
    <link href="~/libs/bootstrap/themes/bootstrap.readable.min.css" rel="stylesheet" media="screen" />
    <link href="~/css/custom.css" rel="stylesheet" media="screen" />
    <link href="~/libs/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    @RenderSection("Csspage",false)

    <!--[if IE 7]>
        <link rel="stylesheet" href="~/libs/font-awesome/css/font-awesome-ie7.min.css">
    <![endif]-->
    <!--[if lt IE 9]>
        <script src="~/js/html5shiv.js"></script>
        <script src="~/js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    @await Html.PartialAsync("Parts/_Header.cshtml")
<!--    Usando PartialAsync porque seu equivalente 
        sincrono será removido em algumas atualizações.-->

    <div id="main" class="container">
        <div class="row">
            <div class="col-xs-12 col-md-8">
                @RenderBody()
            </div>

            <div class="col-md-4">
                @await Html.PartialAsync("Parts/_Sidebar.cshtml")
            </div>
        </div>
    </div>

    @await Html.PartialAsync("Parts/_Footer.cshtml")

    <script src="~/js/jquery-2.0.3.min.js"></script>
    <script src="~/libs/bootstrap/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scriptspage", required: false)
</body>
</html>
