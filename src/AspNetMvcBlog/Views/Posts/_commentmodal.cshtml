@model AspNetMvcBlog.Models.ViewModel.PostComment
<div id="modal-comment" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title" id="myMadalLabel">Add new comment</h3>
            </div>
            <form asp-controller="Comment" asp-action="AddComment">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Posts!.Id" />
                <input type="hidden" asp-for="Comment!.Id" />
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Comment!.Author">Name</label>
                            <input type="text" asp-for="Comment!.Author" class="form-control" id="InputName" placeholder="Enter your name" >
                            <span asp-validation-for="Comment!.Author" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Comment!.Email"> Email address</label>
                            <input type="email" asp-for="Comment!.Email" class="form-control" id="InputEmail" placeholder="Enter email" >
                            <span asp-validation-for="Comment!.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Comment!.Content">Message</label>
                        <textarea asp-for="Comment!.Content" class="form-control" rows="5" id="inputMessage" placeholder="Type your message" ></textarea>
                        <span asp-validation-for="Comment!.Content" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Send"/>
                    <button type="button" class="btn" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scriptspage {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}