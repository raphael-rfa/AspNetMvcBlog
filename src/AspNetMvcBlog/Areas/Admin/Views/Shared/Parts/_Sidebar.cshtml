<div class="navbar-default sidebar" role="navigation">
    <div class="sidebar-nav navbar-collapse">
        <ul class="nav" id="side-menu">
            <li>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="@SetActive(ViewBag.MenuLinkDashboard)">
                    <i class="fa fa-dashboard fa-fw"></i> Dashboard
                </a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Posts" asp-action="List" class="@SetActive(ViewBag.MenuLinkPosts)">
                    <i class="fa fa-file fa-fw"></i> Posts
                </a>
            </li>
        </ul>
    </div>
</div>

@functions {
    string SetActive(bool? isActive)
    {
        return (isActive.HasValue && isActive.Value) ? "active" : "";
    }
}