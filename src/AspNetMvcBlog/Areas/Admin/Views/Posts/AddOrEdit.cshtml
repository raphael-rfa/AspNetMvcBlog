        jQuery(function ($) {

            $postBody = $('#post-body')

            $postBody.redactor({
                minHeight: 355,
                placeholder: 'Add Content here...',
                imageUpload: "/api/images/upload"
            });

            $('#post-form').validate({
                rules: {
